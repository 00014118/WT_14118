extends layout.pug 

block content 
    div.container 
        h1 All notes 

        if deleted
            p.success Deleted

        each note in notes 
            div.note-wrapper 
                a.note(href=`/notes/${note.id}`)  #{note.title} 
                a.delete(href=`/${note.id}/delete`)  Delete
                a.edit(href=`/notes/${note.id}/update`) Edit